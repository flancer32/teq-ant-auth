{
  "package": {
    "fl32": {
      "package": {
        "auth": {
          "entity": {
            "attest": {
              "comment": "Attested public keys to authenticate users.",
              "attr": {
                "bid": {"type": "id", "comment": "Internal ID cause a user can have many keys."},
                "user_ref": {"type": "ref"},
                "date_created": {
                  "comment": "Date-time when record was created.",
                  "type": "datetime",
                  "default": "current"
                },
                "attestation_id": {"type": "string", "comment": "Base64url encoded binary received from device."},
                "public_key": {"type": "text"}
              },
              "relation": {
                "user": {
                  "attrs": ["user_ref"],
                  "ref": {
                    "path": "/fl32/auth/user", "attrs": ["bid"]
                  }
                }
              }
            },
            "password": {
              "comment": "Passwords to authenticate users.",
              "attr": {
                "user_ref": {"type": "ref"},
                "date_updated": {
                  "comment": "Date-time when record was updated.",
                  "type": "datetime",
                  "default": "current"
                },
                "hash": {"type": "binary"},
                "salt": {"type": "binary"}
              },
              "index": {
                "PK": {"type": "primary", "attrs": ["user_ref"]}
              },
              "relation": {
                "user": {
                  "attrs": ["user_ref"],
                  "ref": {
                    "path": "/fl32/auth/user", "attrs": ["bid"]
                  }
                }
              }
            },
            "session": {
              "comment": "Established users sessions.",
              "attr": {
                "code": {"type": "string"},
                "user_ref": {"type": "ref"},
                "date_created": {
                  "type": "datetime",
                  "default": "current",
                  "comment": "UTC date when user session was established."
                }
              },
              "index": {
                "PK": {"type": "primary", "attrs": ["code"]}
              },
              "relation": {
                "user": {
                  "attrs": ["user_ref"],
                  "ref": {"path": "/fl32/auth/user", "attrs": ["bid"]},
                  "action": {"delete": "cascade", "update": "cascade"}
                }
              }
            },
            "user": {
              "comment": "User registry.",
              "attr": {
                "bid": {"type": "id", "comment": "Local ID for the current host."},
                "uuid": {"type": "string", "comment": "Universal ID among all hosts."},
                "key_pub": {
                  "comment": "Public key for encryption and signature verification.",
                  "type": "string"
                },
                "email": {"type": "string", "comment": "Email to restore the access to the user account."},
                "enabled": {"type": "boolean", "default": true},
                "date_created": {
                  "comment": "UTC date-time for user registration.",
                  "type": "datetime",
                  "default": "current"
                }
              },
              "index": {
                "uuid": {"type": "unique", "attrs": ["uuid"]}
              }
            }
          },
          "package": {
            "assert": {
              "entity": {
                "challenge": {
                  "comment": "Challenge to sign in users (WebAuthn API).",
                  "attr": {
                    "attest_ref": {"type": "ref"},
                    "challenge": {
                      "type": "binary",
                      "options": {"length": 32}
                    },
                    "date_created": {
                      "comment": "Date-time when record was created.",
                      "type": "datetime",
                      "default": "current"
                    }
                  },
                  "index": {
                    "PK": {"type": "primary", "attrs": ["challenge"]}
                  },
                  "relation": {
                    "user": {
                      "attrs": ["attest_ref"],
                      "ref": {
                        "path": "/fl32/auth/attest", "attrs": ["bid"]
                      }
                    }
                  }
                }
              }
            },
            "attest": {
              "entity": {
                "challenge": {
                  "comment": "Challenge to attest users (WebAuthn API).",
                  "attr": {
                    "user_ref": {"type": "ref"},
                    "challenge": {
                      "type": "binary",
                      "options": {"length": 32}
                    },
                    "date_created": {
                      "comment": "Date-time when record was created.",
                      "type": "datetime",
                      "default": "current"
                    }
                  },
                  "index": {
                    "PK": {"type": "primary", "attrs": ["challenge"]}
                  },
                  "relation": {
                    "user": {
                      "attrs": ["user_ref"],
                      "ref": {
                        "path": "/fl32/auth/user", "attrs": ["bid"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "refs": {}
}
